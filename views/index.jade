  div#contents
    div#calendar
    input#schedulePlan(type="hidden", value="null")
    div.errorMessage= errorMessage
    form(method="post", action="/")    
      table(border="1")
        tr
          th.date 日付
          th.time 時間
          th.containts 内容
          th.user 予約者
          th 各予定操作
        tr
          td 
