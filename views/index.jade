              option(value="17:00") 17:00
              option(value="18:00") 18:00
              option(value="19:00") 19:00
              option(value="20:00") 20:00
              option(value="21:00") 21:00
              option(value="22:00") 22:00
          td
            input(type="text", name="contents", required, placeholder="会議室利用内容を入力して下さい", size="80")
          td
            input(type="text", name="name", required, placeholder="名前を入力して下さい")
          td
            input(type="submit", value="予約")
        each data in datas
          tr.eachReserve
            td= data.date
            td= data.time
            td= data.content
            td= data.name
            td 
              a(href="/?id=#{data._id}") キャンセル
